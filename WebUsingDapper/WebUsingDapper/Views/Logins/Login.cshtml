@model WebUsingDapper.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div>
        <div>
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row mb-3">
                    <label asp-for="UserName" class="col-sm-2 col-form-label">Username</label>
                    <div class="col-sm-10">
                        <input asp-for="UserName" class="form-control" id="inputEmail3">
                    </div>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="row mb-3">
                    <label asp-for="Password" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-10">
                        <input asp-for="Password" class="form-control" id="inputEmail3">
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <fieldset class="row mb-3">
                    <legend class="col-form-label col-sm-2 pt-0">Remember Me</legend>
                    <div class="col-sm-10">

                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="RememberMe" id="gridRadios3" value="option3">

                        </div>
                    </div>
                </fieldset>

                <button type="submit" class="btn btn-primary">Sign in</button>
            </form>
        </div>
    </div>
</div>
