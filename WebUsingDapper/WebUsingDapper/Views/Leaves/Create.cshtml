@model WebUsingDapper.Models.Leave

@{
    ViewData["Title"] = "Create";
}

<h1>Create Leave</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <select asp-for="EmployeeId" asp-items="@ViewBag.Employees" class="form-select">
                    <option style="display:none;">Select Employees</option>
                </select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LeaveDate" class="control-label"></label>
                <input asp-for="LeaveDate" class="form-control" />
                <span asp-validation-for="LeaveDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReasonType" class="control-label"></label>
                <select asp-for="ReasonType" class="form-select" asp-items="@(new SelectList(Enum.GetValues<ReasonType>()))">
                    <option style="display:none">Select ReasonType</option>
                </select>
                <span asp-validation-for="ReasonType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <div>
                    <a asp-action="Index" class="btn btn-outline-info">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>



